<!-- Classes: User -->
<html>
	<head>
		<link rel="stylesheet" type="text/css" href="/css/bootstrap-theme.min.css"/>
		<link rel="stylesheet" type="text/css" href="/css/bootstrap-theme.css"/>
		<link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css"/>
		<link rel="stylesheet" type="text/css" href="/css/bootstrap.css"/>
		<link rel="stylesheet" type="text/css" href="/css/normalize.css"/>
		<link rel="stylesheet" type="text/css" href="/css/application.css"/>
	</head>
	<body>
		<header>
			<nav>
				<div id="user-name">
					<!-- Link to user profile -->
					<p>User: <a href="/stats"><%= 'dadams18@gmail.com'	%></a></p>
				</div>
				<div id="log-out">
					<!-- Ends session -->
					<form action="/logout" method="post">
						<input type="hidden" name="_method" value="delete"/>
						<button type="submit" class="btn btn-default">Logout</button>
					</form>
				</div>
			</nav>
		</header>
		<div class="container">
			<div class="deck-option">
				<!-- Displays all deck options as buttons -->
				<% @decks.each do |deck| %>
					<form action="/home" method="post">
					<!-- Returns deck selection -->
						<input type="hidden" name="deck[id]" value="<%= @decks.index(deck) %>"/>
						<button type="submit" class="btn btn-default" id="deck"><%= deck %></button>
					</form>
				<% end %>
			</div>
		</div>
		<footer><p class="copyright">Copyright DBC Maple 2014</p></footer>
	</body>
</html>